{
  "name": "quokka-core-mindset",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview -open",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,md,css,scss,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "prettier": "^3.6.2"
  }
}
